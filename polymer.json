{
  "entrypoint": "index.html",
  "shell": "src/ck-app.html",
  "fragments": [
    "src/ck-index.html",
    "src/ck-game.html",
    "src/ck-new.html",
    "src/ck-people.html",
    "src/ck-stats.html"
  ],
  "sources": [
   "src/**/*",
   "images/**/*",
   "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [{
    "name": "prod",
    "bundle": {
      "inlineCss": true,
      "inlineScripts": true,
      "stripComments": true
    },
    "js": {"minify": true},
    "css": {"minify": true},
    "html": {"minify": true, "compile": true}
  }]
}
